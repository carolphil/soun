{% render 'style-contact-us' %}
{% comment %}
  This page template is a requirement if you are submitting your theme to the Shopify Theme Store.
  Be sure to select page.contact as the template from the admin page to have this template take effect.

  For information on adding more fields, visit:
    - http://docs.shopify.com/support/configuration/store-customization/adding-fields-to-the-liquid-contact-form
{% endcomment %}

{% comment %}
  Google Map
{% endcomment %}

<div class="contact-us-page">
  {% if section.settings.display_google_map %}
  <div class="map">
    {% if section.settings.google_map_code != blank %}
    {{ section.settings.google_map_code }}
    {% endif %}
  </div>
  {% endif %}
  
  <div class="container-2">
  	{% render 'breadcrumb' %}
    
    <header class="page-header">
      {% if settings.enable_multilang and section.settings.contact_title contains '|' %}
      <h2 class="lang1">
        {{ section.settings.contact_title | split: '|' | first }}
      </h2>
      <h2 class="lang2">
        {{ section.settings.contact_title | split: '|' | last }}
      </h2>
      {% else %}
      <h2>
        {{ section.settings.contact_title | split: '|' | first }}
      </h2>
      {% endif %}
      <div class="rte">
        {% if settings.enable_multilang %}
        <div class="lang1 des">
          {{ section.settings.contact_text_desc | split: '[lang2]' | first }}
        </div>
        <div class="lang2 des">
          {{ section.settings.contact_text_desc | split: '[lang2]' | last }}
        </div>
        {% else %}
        <div class="des">
          {{ section.settings.contact_text_desc | split: '[lang2]' | first }}
        </div>
        {% endif %}
      </div>
      <span class="line"></span>
    </header> 
    
    
    
    <div class="wrapper">
      <div class="row">
        <div class="left col-12 col-lg-7 col-md-7 form-contact">     
          
          <div class="content">
            <h4 class="title">
              {% if settings.enable_multilang %}
                <div class="lang1 des">
                  {{ section.settings.title_left | split: '[lang2]' | first }}
                </div>
                <div class="lang2 des">
                  {{ section.settings.title_left | split: '[lang2]' | last }}
                </div>
                {% else %}
                <div class="des">
                  {{ section.settings.title_left | split: '[lang2]' | first }}
                </div>
                {% endif %}
            </h4>
              <div class="description rte">
                {% if settings.enable_multilang %}
                <div class="lang1 des">
                  {{ section.settings.des_left | split: '[lang2]' | first }}
                </div>
                <div class="lang2 des">
                  {{ section.settings.des_left | split: '[lang2]' | last }}
                </div>
                {% else %}
                <div class="des">
                  {{ section.settings.des_left | split: '[lang2]' | first }}
                </div>
                {% endif %}
              </div>
          </div>
          
          {% form 'contact' %}

          {% comment %}
          Successful message
          {% endcomment %}

          {% if form.posted_successfully? %}
          <p class="note form-success" {% if settings.enable_multilang %}data-translate="contact.form.post_success"{% endif %}>
            {{ 'contact.form.post_success' | t }}
          </p>
          {% endif %}

          {{ form.errors | default_errors }}

          <div id="contactFormWrapper">          
            <div class="form-group">
              <label for="contactFormName">
                <span {% if settings.enable_multilang %}data-translate="contact.form.name"{%endif%}>
                  {{ 'contact.form.name' | t }}
                </span>
              </label>
              
              <input type="text" id="contactFormName" name="contact[name]" autocapitalize="words" placeholder="{{ section.settings.contact_your_name }}">
            </div>

            <div class="form-group">
              <label for="contactFormPhone">
                <span {% if settings.enable_multilang %}data-translate="contact.form.phone"{%endif%}>
                  {{ 'contact.form.phone' | t }}
                </span>
              </label>
              <input type="tel" name="contact[phone]" id="contactFormPhone" pattern="[0-9]*" placeholder="{{ section.settings.contact_phone_number }}">
            </div>

            <div class="form-group">
              <label for="contactFormEmail">
                <span {% if settings.enable_multilang %}data-translate="contact.form.email"{%endif%}>
                  {{ 'contact.form.email' | t }}
                </span>
                <em>*</em>
              </label>
              <input type="email" name="contact[email]" id="contactFormEmail" autocorrect="off" autocapitalize="off" placeholder="{{ section.settings.contact_your_email }}">
            </div>

            <div class="form-group">
              <label for="contactFormMessage">
                <span {% if settings.enable_multilang %}data-translate="contact.form.message"{%endif%}>
                  {{ 'contact.form.message' | t }}
                </span>
                <em>*</em>
              </label>
              <textarea rows="8" name="contact[body]" id="contactFormMessage" {% if settings.enable_multilang %}data-translate="contact.form.placeholder_message" translate-item="placeholder"{%endif%} ></textarea>
            </div>

            <input type="submit" class="btn btn-x1" {% if settings.enable_multilang %}data-translate="contact.form.submit_contact"{%endif%} value="{{ 'contact.form.submit_contact' | t }}">
          </div>
          {% endform %}
        </div>
        
        {% if section.settings.display_location %}
        <div class="right col-12 col-lg-5 col-md-5 ">
          <div class="content">
            <h4 class="title">
              {% if settings.enable_multilang %}
              <div class="lang1 des">
                {{ section.settings.title_right | split: '[lang2]' | first }}
              </div>
              <div class="lang2 des">
                {{ section.settings.title_right | split: '[lang2]' | last }}
              </div>
              {% else %}
              <div class="des">
                {{ section.settings.title_right | split: '[lang2]' | first }}
              </div>
              {% endif %}
            </h4>
            <div class="description rte">
              {% if settings.enable_multilang %}
              <div class="lang1 des">
                {{ section.settings.des_right | split: '[lang2]' | first }}
              </div>
              <div class="lang2 des">
                {{ section.settings.des_right | split: '[lang2]' | last }}
              </div>
              {% else %}
              <div class="des">
                {{ section.settings.des_right | split: '[lang2]' | first }}
              </div>
              {% endif %}
            </div>
            <a href="{{section.settings.link_btn_right}}" class="btn btn-x2">
              {% if settings.enable_multilang %}
              <span class="lang1 ">
                {{ section.settings.btn_right | split: '[lang2]' | first }}
              </span>
              <span class="lang2 ">
                {{ section.settings.btn_right | split: '[lang2]' | last }}
              </span>
              {% else %}
              <span class="lang1">
                {{ section.settings.btn_right | split: '[lang2]' | first }}
              </span>
              {% endif %}
            </a>
          </div>
          {% if section.settings.location_code != blank %}
          {% if settings.enable_multilang %}
          <div class="location lang1 rte">
            {{ section.settings.location_code | split: '|' | first }}
          </div>
          <div class="location lang2 rte">
            {{ section.settings.location_code | split: '|' | last }}
          </div>
          {% else %}
          <div class="location rte">
            {{ section.settings.location_code | split: '|' | first }}
          </div>
          {% endif %}
          {% endif %}
        </div>
        {% endif %}
      </div>     
    </div>
  </div>    
</div>


{% schema %}
    {
    "name": "Contact Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "display_google_map",
        "label": "Display Google Map?",
        "default": true
      },
      {
        "type": "textarea",
        "id": "google_map_code",
        "label": "Google Map Code"
      },
      {
        "type": "text",
        "id": "contact_title",
        "label": "Title",
        "default": "Contact Us"
      },
      {
        "type": "textarea",
        "id": "contact_text_desc",
        "label": "Text Description",
        "info":"Use [lang2] to separate multiple language"
      },
      {
        "type":"header",
        "content":"left"
      },
      {
        "type":"text",
        "id":"title_left",
        "label":"Title",
        "default":"Send us an email"
      },
      {
        "type":"textarea",
        "id":"des_left",
        "label":"Desctiption"
      },

      {
        "type": "text",
        "id": "contact_your_name",
        "label": "Placeholder text in Your Name"
      },
      {
        "type": "text",
        "id": "contact_phone_number",
        "label": "Placeholder text in Your Phone"
      },
      {
        "type": "text",
        "id": "contact_your_email",
        "label": "Placeholder text in Your Email"
      },
      {
        "type":"header",
        "content":"Right"
      },
      {
        "type":"text",
        "id":"title_right",
        "label":"Title",
        "default":"Please do get in touch!"
      },
      {
        "type":"textarea",
        "id":"des_right",
        "label":"Desctiption"
      },
      {
        "type":"text",
        "id":"btn_right",
        "label":"Title Link",
        "default":"Chat now"
      },
      {
        "type":"url",
        "id":"link_btn_right",
        "label":"Add link"
      },
      {
        "type": "checkbox",
        "id": "display_location",
        "label": "Display Location?",
        "default": true
      },
      {
        "type": "textarea",
        "id": "location_code",
        "label": "Location Code"
      },
      {
        "type":"header",
        "content":"Color Style"
      },
      {
        "type": "checkbox",
        "id": "custom_style_color",
        "label": "Custom Color",
        "default": false
      },
      {
        "type": "color",
        "id": "color_title",
        "label": "Color Sub Title"
      },
      {
        "type": "color",
        "id": "color_content",
        "label": "Color Content"
      },
      {
        "type": "color",
        "id": "color_label",
        "label": "Color Label And Hedding "
      },
      {
        "type": "color",
        "id": "back_right",
        "label": "Background Colum Right"
      }

    ]
  }
{% endschema %}
