{% if section.settings.enable %}
<section class="homepage-reviews" id="section-{{section.id}}">
  <div class="container">
    {% if section.settings.title != blank %}
    <div class="widget-title">
      <h3 style="font-size:{{section.settings.font_size_title}}; color: {{section.settings.title_color}}">
        {% render 'multilang' with section.settings.title %}
      </h3>
    </div>
    {% endif %}
    <div class="row has-slick" >
      {% for block in section.blocks %}
      <div class="item col-6 col-md-6 col-lg-6">
        <div class="top_review">
          <div class="item-user">
            {% if block.settings.user != blank %}
            <img data-src="{{ block.settings.user | img_url: '90x' }}" alt="{{block.settings.user}}" {% render 'lazyload' %}>
            {% else %}
            {% render 'icon_user' %}
            {% endif %}
          </div>
          <div class="review-user">
            {% if block.settings.reviews_title != blank %}
            <div class="title-reviews">
              <h4 style="color:{{block.settings.reviews_title_color}}">
                {% render 'multilang' with block.settings.reviews_title %}
              </h4>
            </div>
            {% endif %}
            {% if block.settings.reviews_name != blank%}
            <p class="name-review" style="color:{{block.settings.reviews_name_color}}"> {% render 'multilang' with block.settings.reviews_name %}</p>
            {% endif %}
          </div>
        </div>
        <div class="botton-review">
          {% if block.settings.body_review != blank %}
          <div class="body-review" style="color:{{block.settings.body_review_color}}">
            {% render 'multilang' with block.settings.body_review %}
          </div>
          {% endif %}
          <div class="star-reviews {{block.settings.rating}}">
            <i class="fa fa-star" aria-hidden="true"></i>
            <i class="fa fa-star" aria-hidden="true"></i>
            <i class="fa fa-star" aria-hidden="true"></i>
            <i class="fa fa-star" aria-hidden="true"></i>
            <i class="fa fa-star" aria-hidden="true"></i>
          </div>
        </div>
        
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}
<script>
