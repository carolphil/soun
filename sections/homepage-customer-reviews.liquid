{% schema %}
  {
    "name": "Customer Reviews",
	"max_blocks": 10,
    "settings": [
      {
        "type":"checkbox",
        "id":"enable",
        "label":"Enable?",
        "default":true
      },
	  {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "CMS Block: Reviews"
      },
      {
        "type":"text",
        "id":"font_size_title",
        "label":"Font Size",
        "default":"50px"
      },
      {
        "type":"color",
        "id":"title_color",
        "label":"Color",
        "default":"#000d41"
      }
	 
	],
    "blocks": [
      {
        "type": "Customer",
        "name": "Customer",
        "settings": [
          {
            "type" : "image_picker",
            "id" : "user",
            "label" : "Select image"
          },
		  {
            "type" : "text",
            "id" : "reviews_title",
            "label" : " Title",
            "default" : "Title"
          },
            {
              "type":"color",
              "id":"reviews_title_color",
              "label":"Color",
              "default":"#000d41"
            },
			{
            "type" : "text",
            "id" : "reviews_name",
            "label" : " Name",
            "default" : "name"
          },
           {
              "type":"color",
              "id":"reviews_name_color",
              "label":"Color",
              "default":"#73788a"
            },
          {
            "type": "select",
            "id": "rating",
            "label": "Rating",
            "options": [
              { "value": "star0", "label": "0 star" },
              { "value": "star1", "label": "1 star" },
              { "value": "star2", "label": "2 star" },
              { "value": "star3", "label": "3 star" },
              { "value": "star4", "label": "4 star" },
              { "value": "star5", "label": "5 star" }
            ],
          	"default": "star5"
          },
          {
            "type": "textarea",
            "id": "body_review",
            "label": "Body of Review",
            "default": "Body of Review"
          },
           {
              "type":"color",
              "id":"body_review_color",
              "label":"Color",
              "default":"#73788a"
            }
		  
        ]
      }	
    ],
    "presets": [
    {
      "name": "Customer Reviews",
      "category": "Reviews",
		"blocks": [
        {
          "type": "Customer"
        },
        {
          "type": "Customer"
        }       
		
      ]
    }
    ]
  }
{% endschema %}
