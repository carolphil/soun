        },
        {
          "type":"color",
          "id":"cotent_color",
          "label":"Color",
          "default":"#73788a"
        },
        {
          "type":"text",
          "id":"font_size_cotent",
          "label":"Font Size",
          "default":"14px"
        },
        {
        "type":"header",
        "content":"tab"
        },
        {
        "type":"checkbox",
        "id":"enable_tab1",
        "label":"Display specification tab?",
        "default":true
        },
        {
        "type":"text",
        "id":"specification_tab_title",
        "label":"Specification tab title",
        "default":"Specification"
        },
        {
          "type":"color",
          "id":"specification_tab_title_color",
          "label":"Color",
          "default":"#000d41"
        },
        {
        "type":"checkbox",
        "id":"enable_tab2",
        "label":"Display Custom Tab?",
        "default":true
        },
        {
        "type":"text",
        "id":"custom_tab_title",
        "label":"Custom tab title",
        "default":"Shipping and Returns | Liefer- und Versandkosten"
        },
        {
          "type":"color",
          "id":"custom_tab_title_color",
          "label":"Color",
