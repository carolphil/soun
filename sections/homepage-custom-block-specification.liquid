          "id":"specification_title",
          "label":"Title",
          "default":"Specification"
        },
        {
          "type":"color",
          "id":"title_color",
          "label":"Color",
          "default":"#000d41"
        },
        {
          "type":"text",
          "id":"font_size_title",
          "label":"Font Size",
          "default":"50px"
        },
        {
          "type":"header",
          "content":"specification left"
        },
        {
          "type":"textarea",
          "id":"cotent_sub",
