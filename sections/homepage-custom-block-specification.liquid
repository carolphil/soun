{% if section.settings.enable %}
<section class=" custom-block-specification section-{{section.id}}" id="{{section.settings.id_scroll}}">
  <div class="container">
    <div class="specification-top">
      <h2 class="title">{% render 'multilang' with section.settings.specification_title %}</h2>
    </div>
    <div class="specification-bottom row">
      <div class="specification-left col-6 col-md-6 col-lg-6">
        <div class="specification-ctn">
        <div class="left-top rte">
          {% render 'multilang' with section.settings.cotent_sub %}
        </div>
        <div class="specification-tab">
          <div class="panel-group" id="accordion">
            {% if section.settings.enable_tab1 %}
            <div class="panel rte wow fadeInUp">
              <div class="panel-heading">
                <div class="panel-title active ">
                  <a data-toggle="collapse"   data-parent="#accordion" href="#collapse-tab1" class="" style="color:{{section.settings.specification_tab_title_color}}">
                    {% render 'multilang' with section.settings.specification_tab_title %}
                  </a>
                </div>
              </div>
              <div id="collapse-tab1" class="panel-collapse collapse in show">
                <div class="panel-body" itemprop="">
                 {% for block in section.blocks %}
                  <ul class="item">
                    <li class="case_des" style="color:{{block.settings.case_des_color}}">{% render 'multilang' with block.settings.case_des %}</li>
                    <li class="des" style="color:{{block.settings.desscription_color}}">{% render 'multilang' with block.settings.desscription %}</li>
                  </ul>
                  
                  {% endfor %}
                </div>
              </div>
            </div>
            {% endif %}

            {% if section.settings.enable_tab2 %}
            <div class="panel wow fadeInUp" data-wow-delay="200ms">
              <div class="panel-heading">
                <div class="panel-title tab2">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapse-tab2" class="collapsed" style="color:{{section.settings.custom_tab_title_color}}">
                    {% render 'multilang' with section.settings.custom_tab_title %}
                  </a>
                </div>
              </div>
              <div id="collapse-tab2" class="panel-collapse collapse">
                <div class="panel-body rte" style="color:{{section.settings.content_cusstom_tab_color}}">
                  {% render 'multilang' with section.settings.content_cusstom_tab %}
                </div>
              </div>
            </div>
            {% endif %}
          </div>   
        </div>
        </div>

      </div>
      <div class="specification-right col-6 col-md-6 col-lg-6">
        <div class="image-ifo">
          {%-assign image_ifo = section.settings.image_ifo | img_url: '800x'-%}
          {% if section.settings.image_ifo != blank %}
          <img data-src="{{image_ifo}}" alt="{{image_ifo.alt}}" {% render 'lazyload' %}>
          {% else %}
          <div class="no-image" style="padding-top:106%; font-size:20px"><span>800x960px</span></div>
          {% endif %}
        </div>

      </div>
    </div>
  </div>
</section>
{% endif %}

{% schema %}
  {
    "name": "Block Specification",
    "settings": [
       {
          "type":"checkbox",
          "id":"enable",
          "label":"Enable?",
          "default":true
        },
        {
