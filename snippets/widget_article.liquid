<div class="widget widget-recent-articles">
  <div class="widget-title">
    <h3 class="sidebar-title">
      <span {% if settings.enable_multilang %}data-translate="blogs.sidebar.recent_articles"{% endif %}>
        {{ 'blogs.sidebar.recent_articles' | t }}
      </span>
    </h3>
  </div>
  
  <div class="widget-content">
    <ul>
      {% for article in blog.articles limit:3 %}
      <li class="article">
        {% if article.image %}
        <div class="image">
           {{ article | img_url: '250x250' | img_tag: image_alt, 'article__image' | link_to: article.url | replace: '<a', '<a' }}
        </div>
        {% endif %}
        <div class="content">
          <h3>
            <a href="{{ article.url }}">
              {% render 'multilang' with article.title %}
            </a>
            <em>{{ article.published_at | date: "%B %d, %Y" }}</em>
          </h3>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>