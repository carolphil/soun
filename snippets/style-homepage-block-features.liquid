<style>
  /*------ background --------*/
  {%- assign img_back = section.settings.back_img | img_url: '2000x' -%}

  {% if section.settings.back_style == 'back_img' %}
  {% if section.settings.back_img != blank %}
  .custom-block-feature .features-top{
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    border: 1px solid transparent;
  }
  {% endif %}
  {% else %}
  .custom-block-feature .features-top{
    background-color:{{section.settings.back_color}};
    border: 1px solid transparent;
  }
  {% endif %}
  .custom-block-feature .features-top .title{
    color: {{section.settings.features_color}};
  }
{% if section.settings.animation_image %}
  .custom-block-feature .image_bottom  img{
    animation-name: anumation_image;
    animation-duration: 2s;
    animation-timing-function: ease-in;
    animation-delay: 1s;
    animation-iteration-count: infinite;
    animation-direction: alternate-reverse;
    position: relative

  }
  @keyframes  anumation_image{
    from {
      top: -10px;
    }
    to {
      top: 10px;
    }
  }
  {% endif %}
</style>